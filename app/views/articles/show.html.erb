<h1><%= @article.title %></h1>
<p>
	<%= @article.subtext %>
</p>
<p>
	<%= @article.text %>
</p>

<h5>Comments</h5>

<% @article.comments.each do |comment| %>
	<p>
		<i><%= comment.author %> said: </i></br>
		<b><%= comment.body %> </b>
	</p>
<% end %>

<h5>Add Comment<h5>
	<p>
		<%= form_for([@article, @article.comments.build]) do |f| %>
	</p>
	<p>
		<%= f.label :author %><br/>
		<%= f.text_field :author %>
	</p>

	<p>
		<%= f.label :body %><br/>
		<%= f.text_area :body %>
	</p>

	<p>
	<%= f.submit %> 
	</p>

<% end %>
