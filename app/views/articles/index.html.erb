<% @articles.each do |article| %>
	<p>
		<%= image_tag article.image %>	
	</p>

    <h2>
		<%= article.title %>
	</h2>

	<p>
		<%= article.subtext %>
	</p>

	<p>
		<%= article.text %>
	</p>

	<p>
		<%= link_to 'Show', article_path(article) %> |
		<%= link_to 'Edit', edit_article_path(article) %> |
		<%= link_to 'Destroy', article_path(article), method: :delete, data: {confirm: 'Are you sure?'} %>
	</p>

	<hr/>

<% end %>


